<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/bootstrap.css" rel="stylesheet">
    <title>用户列表</title>
</head>
<style type='text/css'>
    body {
        padding-top: 120px;
    }

    img {
        border-radius: 50%;
    }

    .header {
        margin-bottom: 30px;
    }
</style>

<body>
    <%include header.ejs%>

    <h1>用户列表</h1>


    <div class="row">
        <div class="col-lg-6">
            <% for(var i=0;i<userlist.length;i++){ %>
            <div style="border-bottom: solid black 1px;margin-bottom: 10px">
                <a href="/user/<%=userlist[i].username %>">
                    <% if(userlist[i].avatar ){%>
                    <img src="/avatar/<%= userlist[i].avatar %>" alt="">
                    <% }else{ %>
                        <img src="/avatar/moren.jpg" alt="">
                    <% } %>
                    
                    </a>
                <p><%= userlist[i].username %></p>
            </div>
            <% } %>
        </div>

    </div>
    </div>

</body>

</html>